generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  avatarUrl String
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Deck {
  id        Int      @id @default(autoincrement())
  elements  String[]
  name      String
  cards     Card[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  id          Int      @id @default(autoincrement())
  amount      Int
  rarity      String
  name        String   @unique
  elite       Boolean
  type        String
  image       String
  painter     String
  elements    String[]
  hitId       Int
  hit         Hit      @relation(fields: [hitId], references: [id])
  price       Int
  health      Int
  moves       Int
  number      Int
  set         String
  unique      Boolean
  description String
  Deck        Deck?    @relation(fields: [deckId], references: [id])
  deckId      Int?
}

model Hit {
  id     Int    @id @default(autoincrement())
  weak   Int
  medium Int
  hard   Int
  Card   Card[]
}
